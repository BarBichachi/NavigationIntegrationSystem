<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="NavigationIntegrationSystem.UI.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Padding="16" RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Margin="0,0,0,12" ColumnDefinitions="*,Auto">
            <StackPanel Spacing="2">
                <TextBlock FontSize="28" FontWeight="SemiBold" Text="Fusion" />
                <TextBlock Opacity="0.7" Text="Pick the source per field and immediately see the chosen output value" />
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Top" Orientation="Horizontal" Spacing="8">
                <Button>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Refresh" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>

                <Button Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Accept" />
                        <TextBlock Text="Apply" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Work area -->
        <Border Grid.Row="1" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12">
            <Grid RowDefinitions="Auto,*" RowSpacing="10">

                <!-- Header row -->
                <Grid ColumnDefinitions="220,80,140,*" ColumnSpacing="12">
                    <TextBlock Opacity="0.7" Text="Field" />
                    <TextBlock Grid.Column="1" Opacity="0.7" Text="Unit" />
                    <TextBlock Grid.Column="2" Opacity="0.7" Text="Value" />
                    <TextBlock Grid.Column="3" Opacity="0.7" Text="Source" />
                </Grid>

                <ListView Grid.Row="1" SelectionMode="None">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0,0,0,8" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <!-- Row: Azimuth -->
                    <ListViewItem>
                        <Border Padding="10" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="10">
                            <Grid MinHeight="48" ColumnDefinitions="220,80,140,*" ColumnSpacing="12">
                                <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Text="Azimuth" />
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" Opacity="0.7" Text="deg" />
                                <TextBlock Grid.Column="2" VerticalAlignment="Center" FontWeight="SemiBold" Text="7.89898" />
                                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="14" VerticalAlignment="Center">
                                    <RadioButton GroupName="AzimuthSrc" Content="VN310: 7.89898" IsChecked="True" />
                                    <RadioButton GroupName="AzimuthSrc" Content="Tmaps100X: 9.0909" />
                                    <RadioButton GroupName="AzimuthSrc" Content="SomeINS: 10.1203123" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ListViewItem>

                    <!-- Row: Elevation -->
                    <ListViewItem>
                        <Border Padding="10" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="10">
                            <Grid MinHeight="48" ColumnDefinitions="220,80,140,*" ColumnSpacing="12">
                                <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Text="Elevation" />
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" Opacity="0.7" Text="deg" />
                                <TextBlock Grid.Column="2" VerticalAlignment="Center" FontWeight="SemiBold" Text="—" />
                                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="14" VerticalAlignment="Center">
                                    <RadioButton GroupName="ElevationSrc" Content="VN310: —" IsChecked="True" />
                                    <RadioButton GroupName="ElevationSrc" Content="Tmaps100X: —" />
                                    <RadioButton GroupName="ElevationSrc" Content="SomeINS: —" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ListViewItem>

                    <!-- Row: Latitude -->
                    <ListViewItem>
                        <Border Padding="10" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="10">
                            <Grid MinHeight="48" ColumnDefinitions="220,80,140,*" ColumnSpacing="12">
                                <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Text="Latitude" />
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" Opacity="0.7" Text="deg" />
                                <TextBlock Grid.Column="2" VerticalAlignment="Center" FontWeight="SemiBold" Text="—" />
                                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="14" VerticalAlignment="Center">
                                    <RadioButton GroupName="LatitudeSrc" Content="VN310: —" IsChecked="True" />
                                    <RadioButton GroupName="LatitudeSrc" Content="Tmaps100X: —" />
                                    <RadioButton GroupName="LatitudeSrc" Content="SomeINS: —" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ListViewItem>

                    <!-- Row: Longitude -->
                    <ListViewItem>
                        <Border Padding="10" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="10">
                            <Grid MinHeight="48" ColumnDefinitions="220,80,140,*" ColumnSpacing="12">
                                <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Text="Longitude" />
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" Opacity="0.7" Text="deg" />
                                <TextBlock Grid.Column="2" VerticalAlignment="Center" FontWeight="SemiBold" Text="—" />
                                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="14" VerticalAlignment="Center">
                                    <RadioButton GroupName="LongitudeSrc" Content="VN310: —" IsChecked="True" />
                                    <RadioButton GroupName="LongitudeSrc" Content="Tmaps100X: —" />
                                    <RadioButton GroupName="LongitudeSrc" Content="SomeINS: —" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ListViewItem>

                    <!-- Row: Altitude -->
                    <ListViewItem>
                        <Border Padding="10" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="10">
                            <Grid MinHeight="48" ColumnDefinitions="220,80,140,*" ColumnSpacing="12">
                                <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Text="Altitude" />
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" Opacity="0.7" Text="m" />
                                <TextBlock Grid.Column="2" VerticalAlignment="Center" FontWeight="SemiBold" Text="—" />
                                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="14" VerticalAlignment="Center">
                                    <RadioButton GroupName="AltitudeSrc" Content="VN310: —" IsChecked="True" />
                                    <RadioButton GroupName="AltitudeSrc" Content="Tmaps100X: —" />
                                    <RadioButton GroupName="AltitudeSrc" Content="SomeINS: —" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ListViewItem>

                    <!-- Add the rest: Pitch/Roll/Speed/INS Status/GPS Status... -->
                </ListView>

            </Grid>
        </Border>

    </Grid>
</Page>
